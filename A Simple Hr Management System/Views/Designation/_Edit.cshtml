@model A_Simple_Hr_Management_System.Models.Designation

<form asp-action="Edit" id="editDesignationForm">
    <input type="hidden" asp-for="DesigId" />
    <input type="hidden" asp-for="ComId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="DesigName" class="control-label"></label>
        <input asp-for="DesigName" class="form-control" />
        <span asp-validation-for="DesigName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
</form>