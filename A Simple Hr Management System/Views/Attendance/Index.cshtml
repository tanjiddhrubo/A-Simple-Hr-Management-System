@model IEnumerable<A_Simple_Hr_Management_System.Models.Attendance>

@{
    ViewData["Title"] = "Attendance Records";
    DateOnly selectedDate = ViewBag.SelectedDate;
}

@if (ViewBag.SelectedCompanyName != null)
{
    <h1>Attendance for: @ViewBag.SelectedCompanyName</h1>

    <form asp-action="Index" method="get" class="row g-3 mb-3 align-items-end">
        <div class="col-md-3">
            <label for="date" class="form-label">Select Date:</label>
            <input type="date" id="date" name="date" class="form-control" value="@selectedDate.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-info">Filter</button>
        </div>
    </form>

    <p>
        <a asp-action="BulkAttendance" asp-route-date="@selectedDate.ToString("yyyy-MM-dd")" class="btn btn-primary">Bulk Attendance Entry</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Date</th>
                <th>Status</th>
                <th>In Time</th>
                <th>Out Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Employee?.EmpName</td>
                    <td>@item.dtDate.ToString("dd-MMM-yyyy")</td>
                    <td>@item.AttStatus</td>
                    <td>@item.InTime?.ToString("hh:mm tt")</td>
                    <td>@item.OutTime?.ToString("hh:mm tt")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Please select a company to see attendance records.</div>
}