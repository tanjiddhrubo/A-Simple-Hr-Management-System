@model A_Simple_Hr_Management_System.ViewModels.EmployeeVM

<form asp-action="Edit" id="editEmployeeForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Employee.EmpId" />
    <input type="hidden" asp-for="Employee.ComId" />

    <div class="row">
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="Employee.EmpCode" class="control-label"></label>
                <input asp-for="Employee.EmpCode" class="form-control" />
                <span asp-validation-for="Employee.EmpCode" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Employee.EmpName" class="control-label"></label>
                <input asp-for="Employee.EmpName" class="form-control" />
                <span asp-validation-for="Employee.EmpName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Employee.Gender" class="control-label"></label>
                <input asp-for="Employee.Gender" class="form-control" />
                <span asp-validation-for="Employee.Gender" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Employee.dtJoin" class="control-label"></label>
                <input asp-for="Employee.dtJoin" class="form-control" type="date" value="@Model.Employee.dtJoin.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Employee.dtJoin" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="Employee.DesigId" class="control-label"></label>
                <select asp-for="Employee.DesigId" class="form-select" asp-items="@Model.DesignationList"></select>
                <span asp-validation-for="Employee.DesigId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Employee.DeptId" class="control-label"></label>
                <select asp-for="Employee.DeptId" class="form-select" asp-items="@Model.DepartmentList"></select>
                <span asp-validation-for="Employee.DeptId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Employee.ShiftId" class="control-label"></label>
                <select asp-for="Employee.ShiftId" class="form-select" asp-items="@Model.ShiftList"></select>
                <span asp-validation-for="Employee.ShiftId" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="Employee.Gross" class="control-label"></label>
                <input asp-for="Employee.Gross" class="form-control" />
                <span asp-validation-for="Employee.Gross" class="text-danger"></span>
                <small class="form-text text-muted">Salaries will be auto-recalculated.</small>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>