@model IEnumerable<A_Simple_Hr_Management_System.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

@if (ViewBag.SelectedCompanyName != null)
{
    <h1>Employees for: @ViewBag.SelectedCompanyName</h1>

    <button type="button" class="btn btn-primary" id="createNewEmployeeBtn">Create New Employee</button>

    <table class="table" id="employeeTable">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.EmpCode)</th>
                <th>@Html.DisplayNameFor(model => model.EmpName)</th>
                <th>@Html.DisplayNameFor(model => model.Designation)</th>
                <th>@Html.DisplayNameFor(model => model.Department)</th>
                <th>@Html.DisplayNameFor(model => model.Shift)</th>
                <th>@Html.DisplayNameFor(model => model.Gross)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmpCode</td>
                    <td>@item.EmpName</td>
                    <td>@item.Designation?.DesigName</td>
                    <td>@item.Department?.DeptName</td>
                    <td>@item.Shift?.ShiftName</td>
                    <td>@item.Gross.ToString("N2")</td>
                    <td>
                        @Html.AntiForgeryToken()
                        <a asp-action="Edit" asp-route-id="@item.EmpId" class="btn btn-sm btn-info js-edit">Edit</a>
                        <button data-id="@item.EmpId" class="btn btn-sm btn-danger js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Please select a company to see its employees.</div>
}

<div class="modal fade" id="mainModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mainModalLabel">Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function () {
            var modal = new bootstrap.Modal(document.getElementById('mainModal'), {});
            var modalTitle = $('#mainModal .modal-title');
            var modalBody = $('#mainModal .modal-body');

            // --- CREATE ---
            $('#createNewEmployeeBtn').on('click', function () {
                modalTitle.text('Create New Employee');
                $.get('/Employee/Create', function (data) {
                    modalBody.html(data);
                    $.validator.unobtrusive.parse($('#createEmployeeForm'));
                    modal.show();
                });
            });

            $('#mainModal').on('submit', '#createEmployeeForm', function (e) {
                e.preventDefault();
                var form = $(this);
                if(form.valid()){
                    $.ajax({
                        url: '/Employee/CreateAjax', type: 'POST', data: form.serialize(),
                        headers: { RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                        success: function (data) {
                            if (data.success) { location.reload(); } 
                            else { alert("Error: " + data.errors.join("\n")); }
                        }
                    });
                }
            });

            // --- EDIT ---
            $('#employeeTable').on('click', '.js-edit', function (e) {
                e.preventDefault();
                modalTitle.text('Edit Employee');
                $.get($(this).attr("href"), function (data) {
                    modalBody.html(data);
                    $.validator.unobtrusive.parse($('#editEmployeeForm'));
                    modal.show();
                });
            });

            $('#mainModal').on('submit', '#editEmployeeForm', function (e) {
                e.preventDefault();
                var form = $(this);
                if(form.valid()){
                    $.ajax({
                        url: '/Employee/EditAjax', type: 'POST', data: form.serialize(),
                        headers: { RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                        success: function (data) {
                            if (data.success) { location.reload(); }
                            else { alert("Error: " + data.errors.join("\n")); }
                        }
                    });
                }
            });

            // --- DELETE ---
            $('#employeeTable').on('click', '.js-delete', function () {
                var button = $(this);
                if (confirm("Are you sure you want to delete this employee?")) {
                    $.ajax({
                        url: '/Employee/DeleteAjax', type: 'POST', data: { id: button.attr('data-id') },
                        headers: { RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                        success: function (data) {
                            if (data.success) {
                                button.closest('tr').fadeOut(500, function () { $(this).remove(); });
                            } else {
                                alert(data.message);
                            }
                        }
                    });
                }
            });
        });
    </SCriPt>
}