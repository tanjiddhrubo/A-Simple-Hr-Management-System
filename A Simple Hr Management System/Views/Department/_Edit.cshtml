@model A_Simple_Hr_Management_System.Models.Department

<form asp-action="Edit" id="editDepartmentForm">
    <input type="hidden" asp-for="DeptId" />
    <input type="hidden" asp-for="ComId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="DeptName" class="control-label"></label>
        <input asp-for="DeptName" class="form-control" />
        <span asp-validation-for="DeptName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
</form>